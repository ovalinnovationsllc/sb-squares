rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all users collection for login
    match /users/{document=**} {
      allow read: if true;
      allow write: if true; // For testing - should be restricted to admins in production
    }
    
    // Allow read/write access to game_scores collection
    match /game_scores/{document=**} {
      allow read: if true;
      allow write: if true; // For testing - should be restricted to admins in production
    }
    
    // Allow read/write access to square_selections collection
    match /square_selections/{document=**} {
      allow read: if true;
      allow write: if true; // All users need to write their selections
    }
  }
}